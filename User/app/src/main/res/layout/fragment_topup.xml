<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/saldoanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Saldo Anda"
        android:textSize="24sp"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/txtSaldoTopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_below="@id/saldoanda"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="Input Nominal"
        android:id="@+id/etNominal"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:layout_below="@+id/txtSaldo"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn10k"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:text="+Rp 20000"
        android:layout_below="@id/etNominal"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn50k"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:text="+Rp 50000"
        android:layout_below="@id/etNominal"
        android:layout_toRightOf="@id/btn10k"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn100k"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:text="+Rp 100000"
        android:layout_below="@id/etNominal"
        android:layout_toRightOf="@id/btn50k"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnTopUp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:text="TOP UP"
        android:layout_below="@id/btn10k"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</RelativeLayout>